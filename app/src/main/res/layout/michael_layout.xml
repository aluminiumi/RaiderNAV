<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="88dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="100dp"
        android:text="Building"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="188dp" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="200dp"
        android:layout_marginVertical="2dp"
        android:text="Start Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="288dp" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginVertical="2dp"
        android:text="End Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="388dp" />

    <TextView
        android:id="@+id/courseText"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginVertical="30dp"
        android:inputType="text"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/buildingText"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="30dp"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerStartTime"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="30dp"/>

    <Spinner
        android:id="@+id/spinnerEndTime"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_marginHorizontal="350dp"
        android:layout_marginVertical="30dp"/>

</RelativeLayout>

